generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int                  @id @default(autoincrement())
  nombre              String
  correo              String               @unique
  clave               String
  descripcion         String?           
  bloqueo             Bloquear[]
  favorito            Favorito[]
}

model Bloquear {
  id              Int     @id @default(autoincrement())
  correo          String
  correo_bloquear String
  Correo          User    @relation(fields: [correo], references: [correo])
}

model Favorito {
  id                  Int @id @default(autoincrement())
  correo              String
  id_correo_favorito  Int
  Correo              User @relation(fields: [correo], references: [correo])
}