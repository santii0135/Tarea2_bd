generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id                  Int                  @id @default(autoincrement())
  nombre              String
  correo              String               @unique
  clave               String
  descripcion         String?           
  bloqueo             bloquear[]
  favorito            favorito[]
}

model bloquear {
  id              Int     @id @default(autoincrement())
  correo          String
  correo_bloquear String
  Correo          user    @relation(fields: [correo], references: [correo])
}

model favorito {
  id                  Int @id @default(autoincrement())
  correo              String
  id_correo_favorito  Int
  Correo              user @relation(fields: [correo], references: [correo])
  CorreoFavorito      correo @relation(fields: [id_correo_favorito], references: [id])
}

model correo {
  id                Int   @id @default(autoincrement())
  remitente_id      Int 
  destinatario_id   Int
  asunto            String
  favorito          favorito[]
}